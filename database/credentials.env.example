# ====================================
# MikroSafe - Credentials Example File
# ====================================
# Rename this file to: credentials.env
# Never commit the real file to git
# ====================================

# SSH configuration
SSH_USER=admin
SSH_PORT=22
SSH_TIMEOUT=10

# SSH passwords (space-separated)
# Example: SSH_PASSWORDS="password1 password2 password3"
SSH_PASSWORDS="changeme1 changeme2"

# Email configuration
FROM_EMAIL=mikrosafe@localhost

# Optional: override base directories
# BASE_DIR=/opt/mikrosafe
# DATABASE_DIR=/opt/mikrosafe/database
# BACKUP_DIR=/opt/mikrosafe/backups
# OUTBOX_DIR=/opt/mikrosafe/outbox
# ASSETS_DIR=/opt/mikrosafe/assets
